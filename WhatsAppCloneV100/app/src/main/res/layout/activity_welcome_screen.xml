<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".WelcomeScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:text="Welcome to WhatsApp Clone"
            android:textStyle="bold"
            android:layout_marginBottom="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"/>
        <ImageView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:src="@drawable/wplogo"
            android:layout_gravity="center_horizontal"
            android:layout_margin="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="16sp"
            android:text="Read our Privacy Policy. Tap Agree and continue to accept the Terms of Service"
            android:gravity="center"/>
        <Button
            android:id="@+id/agreeandcontinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#50CF55"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="AGREE AND CONTINUE"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="from"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#50CF55"
            android:text="F A C E B O O K"
            />
    </LinearLayout>
</RelativeLayout>